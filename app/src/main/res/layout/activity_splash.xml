<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown"
    tools:context=".Splash">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/smart_boi"
        app:layout_constraintBottom_toTopOf="@+id/top1"
        app:layout_constraintEnd_toStartOf="@+id/sideline3"
        app:layout_constraintStart_toStartOf="@+id/sideline2"
        app:layout_constraintTop_toTopOf="@+id/top2">

    </ImageView>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/splash_text"
        android:fontFamily="@font/vp_pixel_font"
        android:textColor="@color/black"
        android:gravity="center"
        android:textStyle="bold"
        app:autoSizeMinTextSize="20sp"
        app:autoSizeMaxTextSize="60sp"
        app:autoSizeTextType="uniform"
        app:autoSizeStepGranularity="5sp"

        app:layout_constraintBottom_toTopOf="@+id/top4"
        app:layout_constraintEnd_toStartOf="@+id/sideline4"
        app:layout_constraintStart_toStartOf="@+id/sideline1"
        app:layout_constraintTop_toTopOf="@+id/top3">

    </TextView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.56" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.19" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.63064295" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.84" />

</androidx.constraintlayout.widget.ConstraintLayout>